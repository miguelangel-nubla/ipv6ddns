{
  "tasks": {
    "myhome": {
      "subnets": [
        "2000::/3"
      ],
      "mac_address": [
        "00:11:22:33:44:55"
      ],
      "endpoints": {
        "mycloudflaresettings": [
          ""
        ]
      },
      "ipv4": {
        "interval": "3m",
        "command": "curl",
        "args": [
          "-s",
          "--ipv4",
          "ifconfig.me"
        ],
        "lifetime": "10m"
      }
    },
    "mylocalonlyserver": {
      "subnets": [
        "fc00::/7"
      ],
      "mac_address": [
        "00:11:22:33:44:56"
      ],
      "endpoints": {
        "mylocaldns": [
          "myserver",
          "*.myserver"
        ]
      },
      "ipv4": {
        "interval": "60s",
        "command": "printf",
        "args": [
          "%s\\n",
          "192.168.1.123"
        ],
        "lifetime": "4h"
      }
    }
  },
  "credentials": {
    "mylocaldns": {
      "provider": "gravity",
      "debounce_time": "10s",
      "settings": {
        "server": "http://192.168.x.x",
        "api_key": "mykey",
        "zone": "myzone.",
        "ttl": "10m"
      }
    },
    "duckdns": {
      "provider": "duckdns",
      "debounce_time": "10s",
      "settings": {
        "api_token": "mytoken"
      }
    },
    "mycloudflaresettings": {
      "provider": "cloudflare",
      "debounce_time": "10s",
      "settings": {
        "api_token": "mytoken",
        "zone": "mydomain.tld",
        "ttl": "1m",
        "proxied": false
      }
    },
    "myrouteros": {
      "provider": "mikrotik",
      "settings": {
        "address": "192.168.88.1:8729",
        "use_tls": true,
        "tls_fingerprint": "<optional>a1b2c3d4...",
        "username": "admin",
        "password": "password",
        "zone": "lan",
        "ttl": "5m"
      }
    },
    "myopnsensebox": {
      "provider": "opnsense_unbound",
      "settings": {
        "address": "https://opnsense.local",
        "tls_fingerprint": "<optional>a1b2c3d4...",
        "key": "your_api_key",
        "secret": "your_api_secret",
        "zone": "example.com"
      },
      "debounce_time": "5s",
      "retry_time": "1m"
    }
  },
  "discovery_plugins": [
    {
      "type": "mikrotik",
      "params": "mikrotik:192.168.88.1:8729,admin,password,true,<optional>a1b2c3d4..."
    },
    {
      "type": "freebsd",
      "params": "freebsd:pfsense.local,admin,,/path/to/id_rsa"
    },
    {
      "type": "linux",
      "params": "linux:[2001:db8::1]:2222,user,,/path/to/id_rsa"
    }
  ]
}